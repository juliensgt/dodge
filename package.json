{
  "name": "starter-pack",
  "private": true,
  "workspaces": [
    "app",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:app\"",
    "dev:api": "yarn --cwd api start:dev",
